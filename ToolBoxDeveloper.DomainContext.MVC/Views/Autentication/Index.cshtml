@model ToolBoxDeveloper.DomainContext.Domain.Dto.UserDto
@{
    ViewData["Title"] = "Autenticacao";
}
<div class="container">
    <message></message>
</div>
<div class="jumbotron jumbotron-fluid autenticacao-jumbotron">
    <authentication mode="Forms">
        <form asp-action="index" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="autenticacao-form-container-div-titulo">
                    <h1 class="display-4">Autenticação</h1>
                     <p class="lead">Autentique para poder gerenciar a linguagem obiqua ou clique <a asp-controller="User" asp-action="Index">aqui</a> para registrar-se</p>
                </div>
                <div class="autenticacao-form-container-div-conteudo">
                    <div class="form-group autenticacao-form-container-div-conteudo-form-group">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group autenticacao-form-container-div-conteudo-form-group">
                        <input asp-for="Password" placeholder="Senha" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group autenticacao-form-container-div-conteudo-form-group">
                        <button type="submit" class="btn btn-primary btn-lg autenticacao-form-container-div-conteudo-form-group-btn">
                            <i class="fa fa-paper-plane" aria-hidden="true"></i>
                            Entrar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </authentication>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
